<h1> Trip Index </h1>

<ul>
  <% @trips.each do |trip| %>
    <li>
    ID: <%= link_to "#{trip.id}", trip_path(trip) %> |
    Date: <%= trip.date %> | 
    Rating: <%= trip.rating %> | 
    Cost: <%= trip.cost %> | 
    Passenger: <%= trip.passenger_id %> | 
    Driver: <%= trip.driver_id %> | 
    <%= link_to "Edit", edit_trip_path(trip) %>
    <%= link_to "Delete", trip_path(trip), method: :delete, data: { confirm: "Are you sure you want to delete Trip #{trip.id}?"} %>
    </li>
  <% end %>
</ul>